package nl.uva.sc.parser;

public class Token implements Comparable<Token> {

    private final String mToken;

    private int mFrequency;

    public Token(final String token) {
        mToken = token;
        mFrequency = 1;
    }

    public Token(final String token, final int occurrence) {
        mToken = token;
        mFrequency = occurrence;
    }

    public void addOccurrence() {
        mFrequency++;
    }
    
    public String getWord() {
        return mToken;
    }

    @Override
    public int hashCode() {
        return mToken.hashCode();
    }

    @Override
    public int compareTo(final Token o) {
        return mFrequency - o.mFrequency;
    }

    @Override
    public String toString() {
        return mToken + " - " + mFrequency;
    }

}
