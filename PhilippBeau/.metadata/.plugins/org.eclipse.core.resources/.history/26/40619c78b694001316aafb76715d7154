package nl.uva.sc.parser;

public class Token implements Comparable<Token> {

    private final String mWord;

    private int mOccurrence;

    public Token(final String word) {
        mWord = word;
        mOccurrence = 1;
    }

    public Token(final String word, final int occurrence) {
        mWord = word;
        mOccurrence = occurrence;
    }

    public void addOccurrence() {
        mOccurrence++;
    }

    public String getWord() {
        return mWord;
    }

    public int getOccurrence() {
        return mOccurrence;
    }

    @Override
    public int hashCode() {
        return mWord.hashCode();
    }

    @Override
    public int compareTo(final Token o) {
        return mOccurrence - o.mOccurrence;
    }

    @Override
    public String toString() {
        return mWord + " - " + mOccurrence;
    }

}
